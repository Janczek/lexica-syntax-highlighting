{
    "name": "lexica-syntax-highlighting",
    "displayName": "Lexica syntax highlighting",
    "description": "Syntax highlighting for the Lexica hardware generation language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "lexica",
            "aliases": ["Lexica", "lexica"],
            "extensions": [".lex"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "lexica",
            "scopeName": "source.lexica",
            "path": "./syntaxes/lexica.tmLanguage.json"
        }]
    }
}